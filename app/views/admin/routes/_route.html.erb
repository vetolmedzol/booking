<tr>
  <td>
    <div id="route_title_<%= route.id %>"><%= route.name %></div>
    <%= render 'form', route: route, hidden: true %>
  </td>
  <td>
    <button><%= link_to t('common.show'), [:admin, route] %></button>
  </td>
  <td>
    <button><%= link_to t('common.edit'), '', class: 'edit_route', data: { route_id: route.id } %></button>
  </td>
  <td>
    <button><%= link_to t('common.delete'), [:admin, route], method: :delete, data: { confirm: 'Are you sure?' } %></button>
  </td>
</tr>
