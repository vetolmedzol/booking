<%= form_for [:admin, railway_station] , html: { style: "display: #{hidden ? 'none' : 'block'}" } do |form| %>
  <% render 'common/errors', resource: railway_station %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: railway_station.new_record? ? t('common.create') : t('common.edit')) , class: 'btn btn-primary create button' %>
  </div>
<% end %>
